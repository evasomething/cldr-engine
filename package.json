{
  "private": true,
  "name": "cldr-engine-monorepo",
  "author": "Patrick Hensley <pathensley@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "api": "lerna run api",
    "bench": "lerna run --stream --concurrency=1 bench",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch --parallel",
    "clean": "lerna run clean && rimraf ./coverage && jest --clearCache",
    "clean:full": "yarn clean && rimraf ./node_modules",
    "lint": "lerna run build && lerna run lint",
    "release": "lerna run clean && lerna run lint && lerna publish --force-publish=* --npm-client=npm",
    "stress": "lerna run --stream --concurrency=1 stress",
    "test": "rimraf ./coverage && jest --coverage --verbose -i --no-cache",
    "test:codecov": "rimraf ./coverage && jest --coverage --coverageReporters=lcovonly --verbose -i --no-cache",
    "test:watch": "jest --watch --runInBand"
  },
  "cldr-data-urls-json": "../../config/cldr-data-urls.json",
  "dependencies": {
    "@types/glob": "^5.0.34",
    "@types/jest": "^23.1.1",
    "@types/lodash": "4.14.110",
    "@types/node": "10.3.4",
    "glob": "^7.1.2",
    "jest": "^23.1.0",
    "lerna": "^2.9.1",
    "rimraf": "^2.6.2",
    "ts-jest": "22.4.6",
    "ts-node": "6.1.1",
    "tslint": "5.10.0",
    "tslint-no-circular-imports": "^0.2.1",
    "typedoc": "^0.11.1",
    "typescript": "~2.8.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts",
      "!packages/*/src/**/index.ts",
      "!packages/*/src/cli/**/*.ts",
      "!packages/*/src/**/*.d.ts"
    ],
    "coverageReporters": ["json", "lcov", "text", "html"],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "@phensley/(.+?)/(.*)": "<rootDir>/packages/$1/src/$2",
      "@phensley/(.+)": "<rootDir>/packages/$1/src",
      "./main/(.+)": "<rootDir>/node_modules/cldr-data/main/$1.json",
      "./supplemental/(.+)": "<rootDir>/node_modules/cldr-data/supplemental/$1.json",
      "./availableLocales": "<rootDir>/node_modules/cldr-data/availableLocales.json",
      "./defaultContent": "<rootDir>/node_modules/cldr-data/defaultContent.json"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
