{
  "private": true,
  "name": "cldr-engine-monorepo",
  "author": "Patrick Hensley <pathensley@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "api": "lerna run api",
    "bench": "lerna run --stream --concurrency=1 bench",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "build:watch": "lerna exec --parallel -- tsc -w --preserveWatchOutput",
    "build:es:watch": "lerna exec --parallel -- tsc -w --preserveWatchOutput --module esnext --outDir lib-es",
    "clean": "lerna run --parallel clean && rimraf ./coverage && jest --clearCache",
    "clean:full": "lerna run --parallel clean:full && rimraf ./node_modules",
    "depgraph": "depcruise -T dot -x tslib packages/cldr/src | dot -T pdf > depgraph.pdf",
    "link-all": "lerna exec --concurrency=1 yarn link",
    "lint": "lerna run build --stream && lerna run build:lint --stream && lerna run lint",
    "stress": "lerna run --stream --concurrency=1 stress",
    "test": "rimraf ./coverage && jest --coverage --verbose -i --no-cache",
    "test:runtime": "rimraf ./coverage && jest --coverage --verbose -i --no-cache --coveragePathIgnorePatterns=\"packages/cldr-(ext-rbnf|compiler|types)/.*\"",
    "test:codecov": "rimraf ./coverage && jest --coverage --coverageReporters=lcovonly --verbose -i --no-cache --coveragePathIgnorePatterns=\"packages/cldr-(ext-rbnf|compiler|types)/.*\"",
    "test:watch": "jest --watch --runInBand --no-cache",
    "unlink-all": "lerna exec --concurrency=1 yarn unlink"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^10.12.21",
    "dependency-cruiser": "^5.1.3",
    "jest": "^24.8.0",
    "lerna": "3.18.4",
    "rimraf": "3.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.14.0",
    "tslint-no-circular-imports": "^0.7.0",
    "typedoc": "0.15.0",
    "typescript": "3.7.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts",
      "!packages/*/src/cli/**/*.ts",
      "!packages/*/src/**/*.d.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "@phensley/(.+)": "<rootDir>/packages/$1",
      "@phensley/(.+)/(.+)": "<rootDir>/packages/$1/$2"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
