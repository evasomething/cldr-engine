{
  "private": true,
  "name": "cldr-engine-monorepo",
  "author": "Patrick Hensley <pathensley@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "api": "lerna run api",
    "bench": "lerna run --stream --concurrency=1 bench",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build build:es",
    "build:watch": "lerna run build:watch --parallel",
    "clean": "lerna run clean && rimraf ./coverage && jest --clearCache",
    "clean:full": "lerna run clean:full && rimraf ./node_modules",
    "depgraph": "depcruise -T dot -x tslib packages/cldr/src | dot -T pdf > depgraph.pdf",
    "link-all": "lerna exec --concurrency=1 yarn link",
    "lint": "lerna run build:lint && lerna run lint",
    "stress": "lerna run --stream --concurrency=1 stress",
    "test": "rimraf ./coverage && jest --coverage --verbose -i --no-cache",
    "test:runtime": "rimraf ./coverage && jest --coverage --verbose -i --no-cache --coveragePathIgnorePatterns=\"packages/cldr-compiler/.*\"",
    "test:codecov": "rimraf ./coverage && jest --coverage --coverageReporters=lcovonly --verbose -i --no-cache --coveragePathIgnorePatterns=\"packages/cldr-compiler/.*\"",
    "test:watch": "jest --watch --runInBand --no-cache",
    "unlink-all": "lerna exec --concurrency=1 yarn unlink"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/node": "^10.12.21",
    "dependency-cruiser": "^4.15.1",
    "jest": "^23.6.0",
    "lerna": "^3.10.8",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "ts-node": "6.1.1",
    "tslint": "5.14.0",
    "tslint-no-circular-imports": "^0.6.1",
    "typedoc": "^0.14.2",
    "typescript": "3.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts",
      "!packages/*/src/cli/**/*.ts",
      "!packages/*/src/**/*.d.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.settings.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "@phensley/(.+?)/(.*)": "<rootDir>/packages/$1/src/$2",
      "@phensley/(.+)": "<rootDir>/packages/$1/src"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
